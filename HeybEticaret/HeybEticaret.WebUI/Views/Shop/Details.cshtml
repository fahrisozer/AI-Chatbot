@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row col-10">
    <div class="col-md-5">
        <img src="~/img/@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" />
    </div>
    <div class="col-md-3">
        <h1 class="mb-3">
            @Model.Product.Name
        </h1>
        <hr />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
        <div class="mb-5">
            <h4 class="text-primary mb-3">
                @Model.Product.Price TL
            </h4>
            <button type="submit" class="btn btn-primary btn-lg">Sepete Ekle</button>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.Product.Description)
        </p>
    </div>
</div>